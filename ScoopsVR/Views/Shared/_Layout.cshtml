<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css">
    

    <style>
        .navbar-inverse {
            background-color: black;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="#" class="navbar-left"><img style="max-height: 44px; margin-top: 3px; margin-right: 5px; " src="~/Content/Images/brandImage.jpg"></a>
                @Html.ActionLink("Scoops VR", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#About">About</a></li>
                    <li><a href="#RoadMap">RoadMap</a></li>
                    <li><a href="#Download">Download</a></li>
                    <li><a href="#Trello">Trello</a></li>
                    <li><a href="#Credits">Credits</a></li>
                    <li><a href="#Contact">Contact</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="container">
                <p>&copy; @DateTime.Now.Year - ScoopsVR - <a href="mailto:dev@scoopsvr.com">dev@scoopsvr.com</a> - <a href="https://twitter.com/cinder0us" class="twitter-follow-button" data-show-count="false" style="vertical-align:bottom;">Follow @@cinder0us</a></p>
                <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/Posts.js");
    @RenderSection("scripts", required: false)

    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-84499101-1', 'auto');
        ga('send', 'pageview');

    </script>
</body>
</html>
